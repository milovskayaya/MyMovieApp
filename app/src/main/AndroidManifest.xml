        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ToWatchListActivity"></activity>
        <activity android:name=".activities.MovieDetailActivity" />
        <activity android:name=".data.entities.Genres$Thriller_Genre" />
