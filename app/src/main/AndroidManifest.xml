        <activity android:name=".data.entities.Genres$Comedy_Genre" />
        <activity android:name=".data.entities.Genres$Animation_Genre" />
        <activity android:name=".data.entities.Genres$Adventure_Genre" />
        <activity android:name=".data.entities.Genres$Action_Genre" />
        <activity android:name=".activities.MovieSearchListActivity" />
        <activity android:name=".activities.TopMoviesActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>