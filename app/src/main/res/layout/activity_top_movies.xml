<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        tools:context=".activities.MainActivity">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Popular Movies by Genre"
            android:textStyle="bold"
            android:textColor="#FF0040"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/action"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/action"
            android:text="ACTION"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/adventure"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/adventure"
            android:layout_below="@id/action"
            android:text="ADVENTURE"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/animation"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/animation"
            android:layout_below="@id/adventure"
            android:text="ANIMATION"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/comedy"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/comedy"
            android:layout_below="@id/animation"
            android:text="COMEDY"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/crime"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/crime"
            android:layout_below="@id/comedy"
            android:text="CRIME"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/drama"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/drama"
            android:layout_below="@id/crime"
            android:text="DRAMA"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/fantasy"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/fantasy"
            android:layout_below="@id/drama"
            android:text="FANTASY"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/horror"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/horror"
            android:layout_below="@id/fantasy"
            android:text="HORROR"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/romance"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/romance"
            android:layout_below="@id/horror"
            android:text="ROMANCE"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/sci_fi"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/sci_fi"
            android:layout_below="@id/romance"
            android:text="SCI-FI"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/superhero"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/superhero"
            android:layout_below="@id/sci_fi"
            android:text="SUPERHERO"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/thriller"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/thriller"
            android:layout_below="@id/superhero"
            android:text="THRILLER"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"/>




    </RelativeLayout>
</ScrollView>