<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        tools:context=".activities.MainActivity">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top 5 Fantasy Movies"
            android:textStyle="bold"
            android:textColor="#FF0040"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/f1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. The Lord of the Rings: The Two Towers (2002)"
            android:layout_below="@id/title"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/f1i"
            android:layout_width="80dp"
            android:layout_height="160dp"
            android:layout_below="@id/f1"
            android:layout_marginLeft="5dp"
            android:src="@drawable/lord_of_rings"
            android:layout_centerVertical="true"
            android:gravity="center" />
        <TextView
            android:id="@+id/f1t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/f1"
            android:layout_toRightOf="@id/f1i"
            android:layout_alignBottom="@id/f1i"
            android:layout_marginLeft="10dp"
            android:text="While Frodo and Sam edge closer to Mordor with the help of the shifty Gollum, the divided fellowship makes a stand against Sauron's new ally, Saruman, and his hordes of Isengard.\nDirector: Peter Jackson\nStars: Elijah Wood, Ian McKellen, Viggo Mortensen"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/f2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2. Life Of Pi (2012)"
            android:layout_below="@id/f1i"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/f2i"
            android:layout_width="80dp"
            android:layout_height="160dp"
            android:layout_below="@id/f2"
            android:layout_marginLeft="5dp"
            android:src="@drawable/life"
            android:layout_centerVertical="true"
            android:gravity="center" />
        <TextView
            android:id="@+id/f2t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/f2"
            android:layout_toRightOf="@id/f2i"
            android:layout_alignBottom="@id/f2i"
            android:layout_marginLeft="10dp"
            android:text="A young man who survives a disaster at sea is hurtled into an epic journey of adventure and discovery. While cast away, he forms an unexpected connection with another survivor: a fearsome Bengal tiger.\nDirector: Ang Lee\nStars: Suraj Sharma, Irrfan Khan, Adil Hussain "
            android:textColor="#000"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/f3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="3. Edward Scissorhands (1990)"
            android:layout_below="@id/f2i"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/f3i"
            android:layout_width="80dp"
            android:layout_height="160dp"
            android:layout_below="@id/f3"
            android:layout_marginLeft="5dp"
            android:src="@drawable/edward"
            android:layout_centerVertical="true"
            android:gravity="center" />
        <TextView
            android:id="@+id/f3t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/f3"
            android:layout_toRightOf="@id/f3i"
            android:layout_alignBottom="@id/f3i"
            android:layout_marginLeft="10dp"
            android:text="An artificial man, who was incompletely constructed and has scissors for hands, leads a solitary life. Then one day, a suburban lady meets him and introduces him to her world.\nDirector: Tim Burton\nStars: Johnny Depp, Winona Ryder, Dianne Wiest "
            android:textColor="#000"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/f4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/f3i"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="4. The Green Mile (1999)"
            android:textColor="#000"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/f4i"
            android:layout_width="80dp"
            android:layout_height="160dp"
            android:layout_below="@id/f4"
            android:layout_marginLeft="5dp"
            android:src="@drawable/mile"
            android:layout_centerVertical="true"
            android:gravity="center" />
        <TextView
            android:id="@+id/f4t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/f4"
            android:layout_toRightOf="@id/f4i"
            android:layout_alignBottom="@id/f4i"
            android:layout_marginLeft="10dp"
            android:text="The lives of guards on Death Row are affected by one of their charges: a black man accused of child murder and rape, yet who has a mysterious gift.\nDirector: Frank Darabont\nStars: Tom Hanks, Michael Clarke Duncan, David Morse"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/f5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="5. Pirates of the Caribbean: Dead Man's Chest (2006)"
            android:layout_below="@id/f4i"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/f5i"
            android:layout_width="80dp"
            android:layout_height="160dp"
            android:layout_below="@id/f5"
            android:layout_marginLeft="5dp"
            android:src="@drawable/pirates"
            android:layout_centerVertical="true"
            android:gravity="center" />
        <TextView
            android:id="@+id/f5t"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_below="@id/f5"
            android:layout_toRightOf="@id/f5i"
            android:layout_alignBottom="@id/f5i"
            android:layout_marginLeft="10dp"
            android:text="Jack Sparrow races to recover the heart of Davy Jones to avoid enslaving his soul to Jones' service, as other friends and foes seek the heart for their own agenda as well.\nDirector: Gore Verbinski\nStars: Johnny Depp, Orlando Bloom, Keira Knightley "
            android:textColor="#000"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:textSize="15sp"/>


    </RelativeLayout>
</ScrollView>