<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="7dp"
        android:text="MOVIEMI"
        android:textStyle="bold"
        android:textColor="#FF0040"
        android:textSize="47sp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/search"
        android:layout_width="320sp"
        android:layout_height="wrap_content"
        android:background="#FF0040"
        android:text="SEARCH"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/search_detail"
        android:layout_width="320sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/search"
        android:background="#FF0040"
        android:text="SEARCH INFORMATION"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/top_movies"
        android:layout_width="320sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_detail"
        android:background="#FF0040"
        android:text="TOP MOVIES"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/to_watch"
        android:layout_width="320sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_movies"
        android:background="#FF0040"
        android:text="TO WATCH"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>